<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatihbozik.busstopsimulation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BusStopDefinitionsActivity" />

        <service android:name=".service.MyService" />

        <activity android:name=".activity.ServiceDriver" />
        <activity android:name=".activity.SchedulesActivity" />
        <activity android:name=".activity.BusActivity" />
        <activity android:name=".activity.BusStopActivity"></activity>
    </application>

</manifest>
